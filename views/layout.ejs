<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üè¢</text></svg>">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="container">
            <div class="nav-brand">
                <a href="/">
                    <i class="fas fa-building"></i>
                    <span><%= title %></span>
                </a>
            </div>
            <ul class="nav-menu">
                <% navLinks.forEach(link => { %>
                    <li class="nav-item <%= req.path === link.path ? 'active' : '' %>">
                        <a href="<%= link.path %>"><%= link.name %></a>
                    </li>
                <% }); %>
            </ul>
            <div class="working-hours-badge">
                <i class="far fa-clock"></i>
                <span><%= workingHours %></span>
            </div>
            <button class="nav-toggle" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3><i class="fas fa-building"></i> <%= title %></h3>
                    <p>Providing exceptional business solutions since 2010.</p>
                </div>
                <div class="footer-section">
                    <h4>Quick Links</h4>
                    <ul>
                        <% navLinks.forEach(link => { %>
                            <li><a href="<%= link.path %>"><%= link.name %></a></li>
                        <% }); %>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Contact Info</h4>
                    <p><i class="fas fa-map-marker-alt"></i> 123 Business St, NY 10001</p>
                    <p><i class="fas fa-phone"></i> +1 (555) 123-4567</p>
                    <p><i class="fas fa-envelope"></i> info@businesssolutions.com</p>
                </div>
                <div class="footer-section">
                    <h4>Working Hours</h4>
                    <p><i class="far fa-clock"></i> <%= workingHours %></p>
                    <div class="time-display">
                        <i class="fas fa-sync-alt"></i>
                        <span id="current-time">Loading...</span>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; <%= currentYear %> <%= title %>. All rights reserved.</p>
                <p class="server-time">Server Time: <span id="server-time"><%= new Date().toLocaleString() %></span></p>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script>
        // Mobile navigation toggle
        document.querySelector('.nav-toggle').addEventListener('click', () => {
            document.querySelector('.nav-menu').classList.toggle('show');
        });

        // Update client time
        function updateTime() {
            const now = new Date();
            document.getElementById('current-time').textContent = 
                now.toLocaleTimeString('en-US', { 
                    hour: '2-digit', 
                    minute: '2-digit',
                    second: '2-digit',
                    hour12: true 
                });
        }
        
        setInterval(updateTime, 1000);
        updateTime();
    </script>
</body>
</html>
